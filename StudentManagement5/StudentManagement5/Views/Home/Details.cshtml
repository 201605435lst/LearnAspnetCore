@model HomeDetailsViewModel
    <html xmlns="http://www.w3.org/1999/xhtml">
    </html>

@{ 
    ViewBag.Title = "学生详情页";

}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Student.Name</h1>
            </div>
            <div class="card-body text-center">
                <img  class="card-img-top" src="~/image/1.jpg"/>
                 <h4>学生ID: @Model.Student.Id</h4>
                <h4>邮箱：@Model.Student.Email</h4>
                <h4>班级名称：@Model.Student.ClassName</h4>
            </div>
            <div class="card-fotter text-center">
                <a  class="btn btn-primary m-1" asp-controller="home" asp-action="Index">返回</a>
                <a href="#" class="btn btn-primary m-1 ">编辑</a>
                <a href="#" class="btn btn-danger m-1">删除</a>

            </div>
        </div>
    </div>

</div>



