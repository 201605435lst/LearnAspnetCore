@model Student
@inject IStudentRepository _studentRepository
@{ 
    ViewBag.title = "创建学生信息";
}
    <form asp-controller="home" asp-action="create" method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Name"></label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="请输入名字" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Email"></label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="请输入名字" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="ClassName"></label>
            <div class="col-sm-10">
                <select class="custom-select mr-sm-2" asp-for="ClassName" asp-items="Html.GetEnumSelectList<ClassNameEnum>()">
                    <option value="">请选择</option>
                </select>

                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">创建</button>
                <button asp-controller="home" asp-action="index" class="btn btn-primary">返回</button>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                学生信息总人数- @_studentRepository.GetAllStudents().Count().ToString();
            </div>
        </div>




    </form>

